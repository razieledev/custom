<openerp>
<data>

<!-- Add fields to Invoice -->
        <record id="view_invoice_form_inherit_facurae_cd" model="ir.ui.view">
            <field name="name">account.invoice.form.cd</field>
            <field name="model">account.invoice</field>
            <field name="type">form</field>
            <field name="inherit_id" ref="account.invoice_form"/>
            <field name="arch" type="xml">
                <notebook position="inside">
                    <page string="CFDI Info">
                        <group colspan="4" col="2" >
                            <field name="cfdi_folio_fiscal"/>                            
                            <field name="cfdi_fecha_timbrado"/>
                            <field name="cfdi_sello"/>
                            <field name="cfdi_no_certificado"/>                            
                            <field name="cfdi_cadena_original"/>
                            <field name="cfdi_fecha_cancelacion"/>
                            <field name="cfdi_folio_fiscal_cancel"/>
                            <field name="cfdi_cbb" widget="image"/>
                        </group>
                    </page>
                </notebook>
            </field>
        </record>
</data>
</openerp>
